<Window x:Class="Money_Vault.View.ExpenseGeneralFullAddModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Money_Vault.View"
        xmlns:viewmodel="clr-namespace:Money_Vault.ViewModel" 
        d:DataContext="{d:DesignInstance Type=viewmodel:ExpenseGeneralFullAddViewModel}"
        mc:Ignorable="d"
        Title="Money Vault v2.01" 
        Height="680" 
        Width="1200" 
        FontFamily="Balsamiq Sans"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Name="expenseGeneralFullAddModalWindow">
    <Grid>
        <Label 
            Content="Добавление новой записи" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top" 
            FontWeight="Bold" 
            FontSize="50"/>

        <DataGrid 
            x:Name="dataGrid_ExpenseItems" 
            Style="{StaticResource DataGridView_Common}"
            ItemsSource="{Binding ProductListsList, Mode=OneWay}" 
            SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
            Margin="10,75,286,10">
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="Номер" 
                    Width="100"
                    Binding="{Binding Id, Mode=OneWay}">
                </DataGridTextColumn>
                <DataGridTextColumn 
                    Header="Категория" 
                    Width="250"
                    Binding="{Binding TypeName, Mode=OneWay}">
                </DataGridTextColumn>
                <DataGridTextColumn 
                    Header="Сумма (руб)" 
                    Width="200"
                    Binding="{Binding Amount, Mode=OneWay}">
                </DataGridTextColumn>
                <DataGridTextColumn 
                    Header="Магазин" 
                    Width="200"
                    Binding="{Binding ShopName, Mode=OneWay}">
                </DataGridTextColumn>
                <DataGridTextColumn 
                    Header="Дата" 
                    Width="200"
                    Binding="{Binding Date, Mode=OneWay, StringFormat=\{0:dd.MM.yyyy\}}">
                </DataGridTextColumn>
                <DataGridTextColumn 
                    Header="Примечание" 
                    Width="264"
                    Binding="{Binding Note, Mode=OneWay}"
                    CanUserSort="False">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Label 
            Style="{StaticResource Label_Common}"
            Content="Дата:" 
            HorizontalAlignment="Left" 
            Margin="1021,162,0,0" 
            VerticalAlignment="Top" 
            FontSize="22"/>

        <Label             
            Style="{StaticResource Label_Common}"
            Content="Примечание:" 
            HorizontalAlignment="Left" 
            Margin="982,256,0,0" 
            VerticalAlignment="Top" FontSize="22"/>

        <Label 
            Style="{StaticResource Label_Common}"
            Content="Магазин:" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            FontSize="22" 
            Margin="1003,75,0,0"/>

        <DatePicker 
            Margin="919,198,9,0" 
            VerticalAlignment="Top" 
            FontFamily="Balsamiq Sans" 
            FontSize="14"
            BorderThickness="2,2,2,2"
            BorderBrush="Black"
            SelectedDate="{Binding Date, Mode=TwoWay}" 
            FirstDayOfWeek="Monday">
            <DatePicker.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.45" ScaleY="1.45"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </DatePicker.LayoutTransform>
        </DatePicker>

        <TextBox 
            x:Name="TextBox_Note"
            Style="{StaticResource placeHolder_common}"
            Tag="Введите примечание..." 
            HorizontalAlignment="Left" 
            Margin="918,292,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="271"
            Text="{Binding Note, Mode=TwoWay}" FontSize="22" Height="307"/>

        <ComboBox 
            x:Name="ComboBox_Shop" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Template="{StaticResource ComboBoxTemplateCommon}"
            Margin="919,111,0,0" 
            FontSize="22"
            BorderThickness="3"
            ItemsSource="{Binding ShopsList, Mode=OneWay}"
            SelectedItem="{Binding Shop, Mode=TwoWay}" 
            Height="35" Width="271"/>

        <Label 
            x:Name="LabelPlaceHolderShop"
            Style="{StaticResource Label_Common}"
            Content="Выберите магазин...*"
            HorizontalAlignment="Left" 
            Margin="919,111,0,0" 
            VerticalAlignment="Top" 
            Width="271" 
            Panel.ZIndex="-1" 
            FontSize="22" 
            Foreground="DarkGray"
            Height="35"
            Visibility="{Binding IsVisibleLabelPlaceHolderShop, Mode=TwoWay}"/>

        <Button 
            x:Name="button_Add" 
            Style="{StaticResource Button_Common}"
            Content="Добавить" 
            HorizontalAlignment="Left" 
            Margin="919,604,0,0" 
            Width="125" 
            FontSize="24" 
            ToolTip="Нажмите, чтобы добавить новую запись и закрыть окно."
            Command="{Binding AddCommand}"
            CommandParameter="{Binding ElementName=expenseGeneralFullAddModalWindow}" 
            Height="50" 
            VerticalAlignment="Top"/>

        <Button 
            x:Name="button_Cancel" 
            Style="{StaticResource Button_Common}"
            Content="Отмена" 
            HorizontalAlignment="Left" 
            Margin="1064,604,0,0" 
            Width="125" 
            FontSize="24" 
            ToolTip="Нажмите, чтобы закрыть окно."
            Height="50" 
            VerticalAlignment="Top"
            IsCancel="True"/>
    </Grid>
</Window>
